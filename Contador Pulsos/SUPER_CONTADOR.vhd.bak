LIBRARY IEEE;
USE STD.STANDARD.ALL;
ENTITY CONTADOR IS
PORT( W,X,Y,Z: IN BIT;
		S: OUT BIT_VECTOR(3 DOWNTO 0));
		END CONTADOR
		
		
ARCHITECTURE SUPER_CONTADOR OF CONTADOR IS
SIGNAL ENTRADAS <= (W & X & Y & Z);
WITH ENTRADAS SELECT
	S <=  "000" WHEN "000",
	-- FULL 
			"0100" WHEN "1111"
			-- 3 
			"0011" WHEN "1110",
			"0011" WHEN "1101",
			"0011" WHEN "1011",
			"0011" WHEN "1110",
			-- 1 
			"0001" WHEN "0001",
			"0001" WHEN "0010",
			"0001" WHEN "0100",
			"0001" WHEN "1000",
			-- 2 
			"0010" WHEN OTHERS;
	
END SUPER_CONTADOR
			
			